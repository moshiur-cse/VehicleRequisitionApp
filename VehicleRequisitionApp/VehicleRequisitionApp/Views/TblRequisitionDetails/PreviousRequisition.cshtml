                            @item.RequiredFromDate.ToString("hh:mm tt")
                        </td>
                        <td>
                            @item.RequiredToDate.ToString("hh:mm tt")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Place)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reason)
                        </td>

