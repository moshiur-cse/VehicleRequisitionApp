                    @Html.DisplayNameFor(model => model.RequiredFromDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RequiredToDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Place)
                </th>
