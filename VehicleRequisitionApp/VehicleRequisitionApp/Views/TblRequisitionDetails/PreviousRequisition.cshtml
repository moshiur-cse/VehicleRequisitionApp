                        </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.LookupProject.ProjectCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LookupRequisitionCategorys.RequisitionCategory)
                        </td>
                        <td>
                            @item.RequestSubmissionDate.ToString("dd-MM-yyyy HH:mm:ss")
                        </td>
