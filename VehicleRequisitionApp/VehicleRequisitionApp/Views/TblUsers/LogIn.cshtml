@model VehicleRequisitionApp.Models.TblUser
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <style>
        .form-horizontal .control-label {
            text-align: left;
            margin-top: 5px;
        }
    </style>
}
<div class="row">
    <div class="col-md-offset-4 col-md-4  col-md-offset-4">
        <div id="loginbox" style="margin-top: 0;" class="mainbox">
            <label style="Color:Red">@TempData["Registration"]</label>
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">Sign In</div>
                    <div style="float: right; font-size: 80%; position: relative; top: -10px">
                        <a href="#">Forgot password?</a>
                    </div>
                </div>
                <div style="padding-top: 20px" class="panel-body">
                    <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                    @using (Html.BeginForm("LogIn", "TblUsers", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.LookUpEmployee.EmpInitial, "Initial", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                <input type="text" name="initials" class="form-control" />
                                @*@Html.DropDownList("EmpId", null,"-- Select --", htmlAttributes: new {@class = "form-control"})*@
                                @*@Html.ValidationMessageFor(model => model.LookUpEmployee.EmpInitial, "", new {@class = "text-danger"})*@
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Password, "Password", htmlAttributes: new {@class = "control-label col-md-3"})
                            <div class="col-md-9">
                                @*<input type="password" name="Password" class="form-control" />*@
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control", id="password", data_toggle = "password" })
                                @*@Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})*@
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label class="col-md-offset-3 col-md-9">
                                <input type="checkbox" id="enable-show">Show Password
                            </label>
                        </div>*@
                        <div style="" class="row">                           
                                <div class="col-md-10">
                                    @*<a href="#">Not a member yet? Register Now !</a>*@
                                    @Html.ActionLink("Not a member yet? Register Now !", "Register", "TblUsers")
                                </div>
                                <div class="col-md-2">
                                    <button type="submit" class="btn btn-default pull-right">Log in</button>
                                    @*<a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>*@
                                </div>
                           
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

