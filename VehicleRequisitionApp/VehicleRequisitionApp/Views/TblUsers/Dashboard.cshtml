<div class="row">
    <div class="col-md-offset-1 col-lg-10 col-md-offset-1">
        <fieldset>
            <legend>Today's Vehicles Status</legend>
            <div id="table_scroll_div">
                <table class="table table-hover table-bordered">
                    <thead style="background-color: #C3E6CB">
                        <tr>
                            <th><label>Request Time</label></th>
                            <th><label>Location</label></th>
                            <th><label>Requester's Name</label></th>
                            <th><label>Requester's Phone No</label></th>
                            <th><label>Driver's Name</label></th>
                            <th><label>Driver's Phone No</label></th>
                            <th><label>Vehicle No</label></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TblRequisitionDetail item in ViewBag.CarStatus)
                        {

                            <tr style="background-color: #e5f5f7">
                                <td>@item.RequiredFromDate.ToString("hh:mm tt")</td>
                                <td>@item.Place</td>
                                <td>@item.LookUpEmployee.EmpFullName</td>
                                <td>@item.LookUpEmployee.EmpMobile</td>
                                <td>@item.LookUpDriverEmployee.EmpFullName</td>
                                <td>@item.LookUpDriverEmployee.EmpMobile </td>
                                <td>@item.LookupVehicles.VehicleNo</td>
                            </tr>
                        }
                        @*@foreach (var item in ViewBag.CombinedCarStatus)
                            {

                                    <tr style="background-color: #e5f5f7">
                                        <td>a</td>
                                        <td>@for(int i=0;i<@item.Place.Length;i++)
                                            {
                                                @item[0].Place[i]
                                            }
                                        </td>
                                        <td>@item.EmpFullName.ToString()</td>
                                        <td>@item.EmpMobile.ToString()</td>
                                        <td>@item.DriverName.ToString()</td>
                                        <td>@item.DriverPhoneNo.ToString() </td>
                                        <td>@item.VehicleNo.ToString()</td>

                                    </tr>

                            }*@
                       
                        @foreach(var item in Model)
                        {
                            <tr style="background-color: #e5f5f7">
                                <td> @item.RequiredFromDate.ToString("hh:mm tt")</td>
                                <td> @item.Place</td>
                                <td> @item.EmpFullName</td>
                                <td>@item.EmpMobile</td>
                                <td>@item.DriverName</td>
                                <td>@item.DriverPhoneNo</td>
                                <td>@item.VehicleNo</td>
                            </tr>
                          
                        }

                        @if (ViewBag.CarStatus.Count == 0 && Model.Count()==0)
                        {
                            <tr>
                                <td colspan="7">
                                    <label style="width: 120px; color: bisque; margin-top: 10px; text-align: center">No Requisition</label>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>
            </div>
        </fieldset>
    </div>
</div>






