            /*border-radius: 5px;*/
        }

        th {
            text-align: center;
        }

        td {
            text-align: center;
        }

        table {
            border: 1px solid #49B054 !important;
            border-collapse: collapse;
        }

            table th, table td {
                border: 1px solid #49B054 !important;
                vertical-align: middle !important;
                text-align: center !important;
            }
