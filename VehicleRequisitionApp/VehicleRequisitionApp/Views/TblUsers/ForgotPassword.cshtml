@model VehicleRequisitionApp.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section styles{
    <link href="~/Content/DataTables/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-select.css" rel="stylesheet" />
    <style type="text/css">
        .open {
            z-index: 9999 !important;
        }
    </style>

}

<div class="row">
   
    <div class="col-lg-12">
        <div id="loginbox" style="margin-top: 0;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <label style="Color:Red">@TempData["Error"]</label>
            <div class="panel panel-info">

                <div class="panel-heading">
                    <div class="panel-title">Password Recovery</div>
                    <div style="float: right; font-size: 80%; position: relative; top: -10px">
                        @Html.ActionLink("Sign In Now!", "LogIn", "TblUsers")
                    </div>
                </div>
                <div style="padding-top: 20px" class="panel-body">
                    <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                    @using (Html.BeginForm("ForgotPassword", "TblUsers", new {ViewBag.ReturnUrl}, FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                        <div class="form-group">
                            <label class="control-label col-md-2">Pin No</label>
                            <div class="col-md-10">
                                <input type="text" name="PinNo" id="PinNo" class="form-control"/>

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "control-label col-md-2"})
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Email, new {htmlAttributes = new {@class = "form-control"}})
                            </div>
                        </div>

                        <div id="submit" class="row">
                            <div class="col-md-offset-6 col-md-6">
                                <button type="submit" class="btn btn-default pull-right">Recover</button>
                                @*<a id="btn-fblogin" href="#" class="btn btn-primary">Login with Facebook</a>*@
                            </div>
                        </div>


                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/bootstrap-select.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script>
       
        $("#EmpId").change(function () {
            var empId = $('#EmpId').val();

        });


    </script>
}




